<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
    <shape>
        <gradient
                android:startColor="#8c7965"
                android:centerColor="#8c7965"
                android:centerY="1.0"
                android:endColor="#8c7965"
                android:angle="270"
        />
        <corners android:radius="15dp" />
    </shape>
   </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:startColor="#00878f"
                android:centerColor="#00878f"
                android:centerY="1.0"
                android:endColor="#00878f"
                android:angle="270"
            />
            <corners android:radius="15dp" />
        </shape>
    </clip>
    </item>
</layer-list>